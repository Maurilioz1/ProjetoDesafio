@model IEnumerable<Sistema.Dominio.Usuarios>

@{
    ViewBag.Title = "Lista de Usuários";
}

<div class="box-footer">
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("CadastrarUsuario")'"><i class="fa fa-fw fa-user-plus"></i> Novo Usuário</button>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Usuários</h3>
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>@Html.DisplayName("Nome Completo")</th>
                            <th>@Html.DisplayName("Apelido")</th>
                            <th width="500">@Html.DisplayName("Email")</th>
                            <th>@Html.DisplayName("Telefone")</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nomeCompleto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.apelido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.telefone)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("EditarUsuario", new { id = item.id, } )'"><i class="fa fa-edit"></i> Editar</button>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("DetalhesUsuario", new { id = item.id })'"><i class="fa fa-fw fa-file-text-o"></i> Detalhes</button>
                                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ExcluirUsuario", new { id = item.id, } )'"><i class="fa fa-fw fa-trash"></i> Excluir</button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
