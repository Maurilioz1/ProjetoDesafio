@model Sistema.Dominio.Usuarios

@{
    ViewBag.Title = "Detalhes do Usuário";
}

<div class="row">
    <div class="login-box">
        <div class="col-md-20">
            <div class="box box-primary">
                <div class="box-body box-profile">

                    <h3 class="profile-username text-center">@Html.DisplayFor(model => model.nomeCompleto)</h3>

                    <p class="text-muted text-center">@Html.DisplayFor(model => model.apelido)</p>

                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>@Html.DisplayName("Nome Completo: ")</b> <a class="pull-right">@Html.DisplayFor(model => model.nomeCompleto)</a>
                        </li>
                        <li class="list-group-item">
                            <b>@Html.DisplayName("Apelido: ")</b> <a class="pull-right">@Html.DisplayFor(model => model.apelido)</a>
                        </li>
                        <li class="list-group-item">
                            <b>@Html.DisplayName("E-mail: ")</b> <a class="pull-right">@Html.DisplayFor(model => model.email)</a>
                        </li>
                        <li class="list-group-item">
                            <b>@Html.DisplayName("Telefone: ")</b> <a class="pull-right">@Html.DisplayFor(model => model.telefone)</a>
                        </li>
                    </ul>
                    <div class="box-footer" align="center">
                        @Html.ActionLink("Editar", "EditarUsuario", new { id = Model.id }, new { @class = "btn btn-primary btn-large" })
                        @Html.ActionLink("Voltar", "ListaUsuarios", new { id = Model.id }, new { @class = "btn btn-primary btn-large" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>